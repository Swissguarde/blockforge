---
import ContentWrap from "../components/ContentWrap.astro";
import CustomButton from "../components/custom-button";
import Input from "../components/input";
import TextArea from "../components/text-area";
import Hero from "../components/Hero.astro";
import DefaultLayout from "../layouts/Default.astro";

---

<DefaultLayout>
    <Hero>
        <p class="uppercase font-extrabold text-center text-zinc-500 tracking-wider">Let's Talk</p>
        <h1 class="font-heading font-black text-5xl md:text-6xl lg:text-7xl text-center m-4">Contact Us</h1>
        <p class="text-center text-xl md:text-2xl mt-6 max-w-xl mx-auto text-zinc-400">We are here to help and answer any questions you may have. Reach out to us to learn more about our services, get support, or to apply or positions.</p>
    </Hero>

    <ContentWrap>
        <div class="max-w-xl mx-auto">
            <h2 class="font-heading font-black text-3xl">What can we help you with?</h2>

            <form class="flex flex-col mt-8">
                <label for="name">Name</label>
                <Input name="name" id="name" type="text"/>
            

                <label for="email" class="mt-4">Email</label>
                <Input name="email" id="email" type="email"/>


                <label for="message" class="mt-4">Message</label>
               <TextArea id="message" name="message"/>
                <CustomButton className="mt-4">Send Message</CustomButton>

            </form>
        </div>
    </ContentWrap>
   
</DefaultLayout>